%table{:border => "1"}
  %tr
    %th Name
    %th Status
    %th Actions
    - @products.each do|c|
      %tr
        %td= c.name
        %td= c.status
        %td
          %form(action="/product/#{c.id}" method="POST")
            %input(type="hidden" name="_method" value="DELETE")
            %input(type="submit" value="Delete")
  
  
        